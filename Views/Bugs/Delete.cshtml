@model Bugs

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Ticket</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Project"></label>
            <input asp-for="Project" disabled class="form-control" />
            <span asp-validation-for="Project" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Ticket"></label>
            <input asp-for="Ticket" disabled class="form-control" />
            <span asp-validation-for="Ticket" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Status"></label>
            <select asp-for="Status" asp-items="Model.Statuses" disabled class="form-select"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CreatedDateTime"></label>
            <input asp-for="CreatedDateTime" disabled class="form-control" />
            <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Priority"></label>
            <select asp-for="Priority" disabled asp-items="Model.Priorities" class="form-select"></select>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Bugs" asp-action="Index" class="btn btn-primary" style="width:150px">
            Back to list
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}