@model IEnumerable<Bugs>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 style="color: red;">Bugs List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Bugs" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add new Ticket
            </a>
        </div>
    </div>
</div>
<br />
<br />

<table class="table table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Ticket</th>
            <th>Project</th>
            <th>Status</th>
            <th>Created Date</th>
            <th>Priority</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="17%">
                    @obj.Ticket
                </td>
                <td width="17%">
                    @obj.Project
                </td>
                <td width="10%">
                    @obj.Status
                </td>
                <td width="20%">
                    @obj.CreatedDateTime
                </td>
                <td width="7%">
                    @obj.Priority
                </td>
                <td width="20%" align="right">
                    <div class="w-40 btn-group" role="group">
                        <a asp-controller="Bugs" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                    </div>

                    <div class="w-40 btn-group" role="group">
                        <a asp-controller="Bugs" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-pencil-square"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>